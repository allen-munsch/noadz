{

  "description": "Remove ads, scrape a site, other stuff too.",
  "manifest_version": 2,
  "name": "Noadz",
  "version": "1.0",
  "homepage_url": "http://blah.com/",
  "icons": {
    "48": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://twitter.com/"],
      "js": ["twitter.js"]
    },
    {
      "matches": ["https://www.facebook.com/"],
      "js": ["facebook.js"]
    },
    {
      "matches": ["https://www.amazon.com/*"],
      "js": ["scrape_amazon.js"]
    }
  ],
  "permissions": [
      "<all_urls>",
      "webRequest",
      "storage",
      "nativeMessaging"
  ]

}
